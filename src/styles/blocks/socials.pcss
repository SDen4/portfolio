.socials {
  max-width: 163px;
  width: 20%;
  @include tablets {
    margin-left: 36%;
  }

  &__footer {
    max-width: 190px;
    width: 100%;
      @include tablets {
        margin-left: 0;
      }
  }
}

.socials__list {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.socials__list_footer {
  justify-content: flex-start;
}

.socials__item {
  display: block;
  &:last-child {
      margin-right: 0;
  }
  @include tablets {
    margin-right: 40PX;
  }

}

.socials__item_footer {
  display: flex;
  align-items: center;
  justify-content: center;

  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid $text-color-gray;

  transition: .6s;

  &:hover {
    border: 1px solid $text-color;
  }
  &:hover .socials__pic {
    fill: $text-color;
  }

  margin-right: 20px;

  &::last-child {
    margin-right: 0;
  }


}

.socials__link {
  display: flex;
  justify-content: center;
}

.socials__pic {
  fill: $text-color-gray;
  transition: .6s;
  &:hover {
    fill: $text-color;
  }
}

.socials__pic_vk {
  width: 31PX;
  height: 28PX;
}

.socials__pic_insta {
  width: 25PX;
  height: 25PX;
}

.socials__pic_github {
  width: 27PX;
  height: 23PX;
}