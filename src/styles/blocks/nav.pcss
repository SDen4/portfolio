.nav {
    max-width: 690px;
    width: 100%;
    font-size: 16px;
    line-height: 30px;
    font-weight: 400;
    margin: 0 1%;
}

.nav__list {
    display: flex;
    flex-direction: row;
}

.nav__item {
    width: 100%;
    margin-right: 5%;
    &:last-child {
        margin-right: 0;
    }
}

.nav__link {
    display: block;
    width: fit-content;
    text-decoration: none;
    transition: .6s;
    &:after{
        content: "";
        display: block;
        opacity: 0;
        height: 2px;
        background-color: #fff;
        transition: .6s;
    }
    &:hover:after {
        opacity: 1;
    }
}