.nav {
    max-width: 730PX;
    width: 100%;
    line-height: 30PX;
    font-weight: 400;
    margin: 0 1%;
}

.header__wrapper .nav {
    @include tablets {
        display: none;
    }
}

.nav__list {
    display: flex;
    flex-direction: row;
}

.nav__item {
    width: 100%;
    &:last-child {
        margin-right: 0;
    }
}

.nav__link {
    display: block;
    width: fit-content;
    text-decoration: none;
    transition: .6s;
    &:after{
        content: "";
        display: block;
        opacity: 0;
        height: 2PX;
        background-color: #fff;
        transition: .6s;
    }
    &:hover:after {
        opacity: 1;
    }
}