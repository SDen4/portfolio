mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className, altName)
  img(src=require(`images/${path}`) class=className alt=altName)

mixin nav(className, items, activeItem)
  nav(class=`${className}`)
    ul(class=`${className}__list`)
      each item in items
        li(class=`${className}__item`)
          a(class=`${className}__link` href="")= item

mixin scl(className, items)
  div(class=`${className}`)
    ul(class=`${className}__list`)
      each social in items
        li(class=`${className}__item`)
          a(class=`${className}__link ${className}__link_${social}` href="#")
            +icon(`${social}`, `${className}__pic ${className}__pic_${social}`)

mixin scl-footer(className, items)
  div(class=`${className}`)
    ul(class=`${className}__list ${className}__list_footer`)
      each social in items
        li(class=`${className}__item ${className}__item_footer`)
          a(class=`${className}__link ${className}__link_${social}` href="#")
            +icon(`${social}`, `${className}__pic ${className}__pic_${social}`)

mixin devInfo(className, items)
  div(class=`${className}`)
    ul(class=`${className}__list`)
      for item in items
        li(class=`${className}__item`)
          div(class=`${className}__answ`)= item

mixin skill(className, items)
  ul(class=`${className}__list`)
    for item in items
      li(class=`${className}__item`)
        +icon('ellips', `${className}__round-${item}`)
        div(class=`${className}__empty-round`)
          div(class=`${className}__name`)= item

mixin tools(className, items)
  div(class=`${className}`)
    ul(class=`${className}-list`)
      for item in items
        li(class=`${className}-item`)
          div(class=`${className}-name`)= item


